<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mustache.webservice.authority.AuthorityDao">
    <select id="readAccountAuthById" parameterType="String" resultType="com.mustache.webservice.authority.vo.AuthorityForSelect">
        SELECT  * FROM  account_authority_mapping WHERE user_id=#{userId}
    </select>
    <select id="readAuthorities" resultType="com.mustache.webservice.authority.vo.AuthorityForSelect">
        SELECT auth_name FROM authority;
    </select>
</mapper>